<div class="form-actions">
	<section>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner well-small">
                <div class=" container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    
                    <div class="nav-collapse collapse navbar-responsive-collapse">
                        <ul class="nav nav-tabs pull-right">
                                                     
     						<li class="<%= 'active' if current_page?(root_path) %>">
	                            	<%= link_to "Home", root_path %>
	                        </li>

	                        <li class="<%= 'active' if current_page?(scrape_scrape_rent_path) %>">
	                            	<%= link_to "More", scrape_scrape_rent_path %>
	                        </li>
							<% if signed_in? %>
								<li class="<%= 'active' if current_page?(properties_path) %>">
	                               <%= link_to "Manage Property", properties_path %>
	                            </li>

	                            <li class="">	
	                               <%= link_to "My account", profile_path(current_user.id), :method => :get %>
	                            </li>
	                            <li class="<%= 'active' if current_page?(destroy_user_session_path) %>">
	                               <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => :offset1  %>
	                            </li>
	                        <% else %>

	                            <li class="<%= 'active' if current_page?(about_path) %>">
	                                <%= link_to "About us", about_path %>
	                            </li>
	                            
	                            <li class="<%= 'active' if current_page?(new_user_session_path) %>">
	                             	<%= link_to "Sign in", new_user_session_path %>
	                            </li>
	                            <li class="<%= 'active' if current_page?(new_user_registration_path) %>">
	                             	<%= link_to "Sign up", new_user_registration_path %>
	                            </li>

                            <% end %>
                          
                        </ul>
                    </div>
					
                    <div> 
                    	<a ><%= image_tag( "logo.png" , :width =>"4%", :class => "pull-left img-circle") %></a>	
                    	<a class="brand text-success">Property Connect </a>
                    </div>
            </div>
        </div>
    </section>
	<!--Tabbed menu-->

	<div style="margin-top:30px;"></div>
	<section >
		<div class="top-nav container">
			<div class="row">
				
				<div class="span3">
					<p>
						Your choice <small>(New properties on the market)</small><br/>
						<i class="text-success"><%= current_user.email if user_signed_in? %></i>
                    	<i class="text-warning"><%= alert %></i>
                    	<i class="notice text-info"><%= notice %></i>
					</p>
				</div>
				<div class="span3">
					<%= form_tag(properties_path, :method => "get", class: "navbar-form", id: "search-form") do %>
					    <div class="input-append">
					      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Property" %> 
					      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
					           of using a Rails form helper -->
					      <%= submit_tag "Search", :name => nil, :class => "btn btn-medium btn-primary"  %><i class="icon-search"></i></button>
					    </div>
				    <% end %>
			    </div>

				
				<div class="span3">
					
							<span class="text-right"></span>
							
							<p>
								 <%= link_to "Check out new Houses and Land", scrape_scrape_rent_path, :class => :btn %>

							</p>
					
				</div>

				<div class="span3">
					<p>
						Manage<small> and find property</small>
					</p>
					<% form_tag request.path, :method => 'get' do %>
						  <% content_tag :label do %>
						    Search term:
						    <%= text_field_tag :search, params[:search] %>
						  <% end %>
						<% end %>					
				</div>
			</div>
		</div>
	</section>
</div>