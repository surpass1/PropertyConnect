<div class="form-actions">
	<section>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner well-small">
                <div class=" container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    
                    <div class="nav-collapse collapse navbar-responsive-collapse">
                        <ul class="nav pull-right">
                                                     
     						
							<% if signed_in? %>
							<li class="dropdown">
	                               <%= link_to "Manage Property", properties_path %>
	                            </li>

	                            <li class="dropdown">
	                               <%= link_to "My account", profile_path(current_user.id), :method => :get %>
	                            </li>
	                            <li class="dropdown">
	                               <%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => :offset1  %>
	                            </li>
	                        <% else %>

	                            <li class="dropdown">
	                                <%= link_to "Home", root_path %>
	                            </li>
	                            <li class="dropdown">
	                                <%= link_to "About us", about_path %>
	                            </li>
	                            
	                            
	                             <li class="divider"><%= link_to "Sign in", new_user_session_path %></li>
	                             <li class="divider"><%= link_to "Sign up", new_user_registration_path %></li>

                            <% end %>
                            
                           
                        </ul>
                    </div>
                    <div <a class="brand">Property Connect</a>
                </div>
            </div>
        </div>
    </section>
	<!--Tabbed menu-->

	<br/>
	<section >
		<div class="top-nav container">
			<div class="row">
				<div class="span2">
					<a class="img-circle"><%= image_tag( "logo.png")%></a>
				</div>
				<div class="span4">
					<p class="text-success"><%= current_user.email if user_signed_in? %></p>
					<p class="alert well-small"><%= alert %></p>
					
						<p class="notice 	"><%= notice %></p>
			        
				</div>
				<div class="span3">
					<p>
						Manage<small> and find property</small>
					</p>
					<%= form_tag(properties_path, :method => "get", class: "navbar-form", id: "search-form") do %>
				    <div class="input-append">
				      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Property" %>
				      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
				           of using a Rails form helper -->
				      <button class="btn" type="submit"><i class="icon-search"></i></button>
				    </div>
				  <% end %>
					
				</div>
				<div class="span3">
					
							<span class="text-right"></span>
							<p>
								Your choice <small>(New properties on the market)</small>
							</p>
							<p>
								 <%= link_to "Check out new Houses and Land", root_path, :class => :btn %>

							</p>
					
				</div>
			</div>
		</div>
	</section>
</div>